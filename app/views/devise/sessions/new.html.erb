<body>
 <div class="container">
  <div class="card">
   <div class="card-body">
    <h2>ログイン</h2>
<%= form_with model: @user, url: user_session_path, local: true do |f| %>
<%#= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :ユーザーネーム %><br />
    <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
   </div>
  </div>
 </div>
</body>

<div class="login_reminder"><a href="/reminder">パスワードをお忘れの方</a></div>