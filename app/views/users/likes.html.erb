<h4>＜お気に入り投稿一覧＞</h4>
<div class="container">
 <div class="row">
  <%#= render partial: "posts/post", collection: @like_posts %>
  <% @like_posts.each do |like_post| %>
   <div class="col-sm-4">
    <div class="card">
    <%= link_to post_path(like_post.id) do %>
     <%= attachment_image_tag like_post, :image, class: "card-img-top" %>
    <% end %>
     <div class="card-body text-center">
      <p>投稿No.<%= like_post.id %></p>
      <p>
        タイトル：
        <%= link_to post_path(like_post.id) do %>
         <%= like_post.title %>
        <% end %>
      </p>
      <p><%#= attachment_image_tag like_post, :image %></p>
      <p><%#= like_post.title %></p>
      <p>コメント：<%= like_post.comment %></p>
      <p>ユーザーネーム：<%= like_post.user.user_name %></p>
      <p><%= like_post.created_at.strftime('%Y/%m/%d %H:%M') %></p>
     </div>
    </div>
   </div>
  <% end %>
 </div>
</div>