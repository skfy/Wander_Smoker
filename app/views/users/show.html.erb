<div class="container">
 <div class="row">
  <div class="col">
   <h4>＜マイページ＞</h4>
   <table class="table table-striped ">

    <tr>
     <th>名前</th>
     <td><%= @user.name %></td>
    </tr>

    <tr>
     <th>カナ</th>
     <td><%= @user.name_kana %></td>
    </tr>

    <tr>
     <th>ユーザーネーム</th>
     <td><%= @user.user_name %></td>
    </tr>

    <tr>
     <th>メールアドレス</th>
     <td><%= @user.email %></td>
    </tr>

    <tr>
     <th>パスワード</th>
     <td><%= @user.password %></td>
    </tr>

    <tr>
     <th>年齢</th>
     <td><%= @user.age %></td>
    </tr>
   </table>

    <%= link_to "いいねした投稿", likes_user_path(@user), class: "btn btn-info" %>

    <%= link_to "編集する", edit_user_path(@user), class: "btn btn-success" %>

  </div>
 </div>
</div>